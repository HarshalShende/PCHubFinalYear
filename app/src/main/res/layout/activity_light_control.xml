<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lightControlActivity">

    <LinearLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="838dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/activityIcon"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:maxWidth="1dp"
            android:maxHeight="1dp"
            android:scaleType="centerInside"
            android:src="@drawable/colourcontrolicon" />

        <TextView
            android:id="@+id/activityTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="Light Control"
            android:textAlignment="center"
            android:textColor="@color/darkNight"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cardViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:text="Preset Colours"
            android:textAlignment="center"
            android:textColor="@color/darkNight"
            android:textSize="18sp"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="30dp"
            app:cardBackgroundColor="@color/magicBlue"
            app:cardCornerRadius="20dp">

            <Button
                android:id="@+id/whiteColourBtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_square_white"
                android:clickable="true" />

            <Button
                android:id="@+id/redColourBtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_square_red"
                android:clickable="true" />

            <Button
                android:id="@+id/orangeColourBtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_square_orange"
                android:clickable="true" />

            <Button
                android:id="@+id/yellowColourBtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_square_yellow"
                android:clickable="true" />

            <Button
                android:id="@+id/cyanColourBtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="195dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_square_cyan"
                android:clickable="true" />

            <Button
                android:id="@+id/blueColourBtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="235dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_square_blue"
                android:clickable="true" />

            <Button
                android:id="@+id/purpleColourBtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_square_purple"
                android:clickable="true" />

            <Button
                android:id="@+id/pinkColourBtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="340dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_square_pink"
                android:clickable="true" />

            <Button
                android:id="@+id/greenColourBtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="380dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_square_green"
                android:clickable="true" />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="484dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="16dp"
            app:cardBackgroundColor="@color/magicBlue"
            app:cardCornerRadius="20dp">


            <TextView
                android:id="@+id/ColourWheelTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="25dp"
                android:text="Use the wheel to pick a colour"
                android:textColor="@color/snowWhite"
                android:textSize="18sp"
                android:textStyle="bold" />

            <top.defaults.colorpicker.ColorPickerView
                android:id="@+id/colorPicker"
                android:layout_width="483dp"
                android:layout_height="433dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="50dp"
                app:enableAlpha="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            app:cardBackgroundColor="@color/magicBlue"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/lightControlTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Lights Control"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/snowWhite"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/greenBtn"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="55dp"
                android:background="@drawable/greenbutton"
                android:text="Lights ON"
                android:textAllCaps="false"
                android:textColor="@color/snowWhite"
                android:textStyle="bold" />

            <Button
                android:id="@+id/redBtn"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="55dp"
                android:background="@drawable/redbutton"
                android:text="Lights OFF"
                android:textAllCaps="false"
                android:textColor="@color/cardview_light_background"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>






















