<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".computerStatActivity">

    <LinearLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/activityIcon"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:maxWidth="1dp"
            android:maxHeight="1dp"
            android:scaleType="centerInside"
            android:src="@drawable/computerstats" />

        <TextView
            android:id="@+id/activityTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="Computer Stats"
            android:textAlignment="center"
            android:textColor="@color/darkNight"
            android:textSize="18sp"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardBackgroundColor="@color/magicBlue"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/cardViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Average Temperatures"
                android:textAlignment="center"
                android:textColor="@color/snowWhite"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:text="CPU:"
                android:textAlignment="center"
                android:textColor="@color/snowWhite"
                android:textSize="18sp"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>









    </LinearLayout>

</android.support.v4.widget.NestedScrollView>